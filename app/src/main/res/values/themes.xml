        <!-- Hauptfarben -->
        <item name="colorPrimary">@color/teal_700</item> <!-- Kräftigeres Türkis -->
        <item name="colorPrimaryVariant">@color/teal_700</item> <!-- Verhindert lila Balken -->
        <item name="colorOnPrimary">#121212</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
