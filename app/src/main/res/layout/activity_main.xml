<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:id="@+id/welcomeMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/dosis_bold"
            android:text="Willkommen in Shelfify!"
            android:textColor="@color/teal_200"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnShowAllProducts"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/teal_200"
            android:text="ALLE PRODUKTE ANZEIGEN"
            android:textColor="@color/teal_700"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSearchSpoiledProducts"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/teal_200"
            android:text="ABGELAUFENE PRODUKTE ANZEIGEN"
            android:textColor="@color/teal_700"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnAddProduct"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/teal_200"
            android:text="NEUES PRODUKT HINZUFÜGEN"
            android:textColor="@color/teal_700"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnRemoveProduct"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/teal_200"
            android:text="PRODUKT ENTFERNEN"
            android:textColor="@color/teal_700"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnRecipes"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/teal_200"
            android:text="Rezepte"
            android:textColor="@color/teal_700"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/teal_200"
            android:text="Einstellungen"
            android:textColor="@color/teal_700" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSync"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:backgroundTint="@color/teal_200"
        android:text="↻"
        android:textSize="20sp"
        android:textColor="@color/teal_700"
        android:elevation="8dp" />
</FrameLayout>
