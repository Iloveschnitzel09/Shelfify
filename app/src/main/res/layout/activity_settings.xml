<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Abschnitt: E-Mail Einstellungen -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="E-Mail für Ablaufbenachrichtigungen"
            android:textColor="@color/teal_700"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/hint_email"
            android:textColor="@color/teal_100"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/teal_200"
            android:hint="E-Mail-Adresse eingeben"
            android:importantForAutofill="yes"
            android:inputType="textEmailAddress"
            android:textColor="@color/teal_200"
            android:textColorHint="#AAAAAA" />

        <Button
            android:id="@+id/btnSaveEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/teal_200"
            android:text="E-Mail speichern"
            android:textColor="@color/teal_700" />

        <!-- Abschnitt: Verifizierung -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Verifizierung"
            android:textColor="@color/teal_700"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/hint_verify"
            android:textColor="@color/teal_100"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvVerificationStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Verifizierungsstatus: Nicht verifiziert"
            android:textColor="@color/teal_200" />

        <LinearLayout
            android:id="@+id/verificationContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etVerificationCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/teal_200"
                android:hint="Verifizierungscode"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="@color/teal_200"
                android:textColorHint="#AAAAAA" />

            <Button
                android:id="@+id/btnVerify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/teal_200"
                android:text="Verifizieren"
                android:textColor="@color/teal_700" />
        </LinearLayout>

        <Button
            android:id="@+id/btnRequestCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/teal_200"
            android:text="Verifizierungscode anfordern"
            android:textColor="@color/teal_700" />

        <!-- Abschnitt: Benachrichtigungen -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Benachrichtigungen"
            android:textColor="@color/teal_700"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Aktivieren Sie wöchentliche Benachrichtigungen, um einen Überblick über Ihre bald ablaufenden Lebensmittel zu erhalten."
            android:textColor="@color/teal_100"
            android:textSize="14sp" />

        <Switch
            android:id="@+id/switchNotifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:enabled="false"
            android:text="Benachrichtigungen immer Montags um 7Uhr"
            android:textColor="@color/teal_200"
            android:textSize="16sp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
      
        <!-- Abschnitt: Gruppenverwaltung -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Gruppenverwaltung"
            android:textColor="@color/teal_700"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/hint_datagroup_0"
            android:textColor="@color/teal_100"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/datagoupContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etInviteEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/teal_200"
                android:hint="Email zum einladen"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:textColor="@color/teal_200"
                android:textColorHint="#AAAAAA" />

            <Button
                android:id="@+id/btnInvite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/teal_200"
                android:text=" einladen "
                android:textColor="@color/teal_700" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/datagoupJoinContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etJoinCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/teal_200"
                android:hint="Code zum beitereten"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:textColor="@color/teal_200"
                android:textColorHint="#AAAAAA" />

            <Button
                android:id="@+id/btnJoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/teal_200"
                android:text="beitreten"
                android:textColor="@color/teal_700" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/hint_datagroup_1"
            android:textColor="@color/teal_100"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnLeave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/teal_200"
            android:text="Gruppe verlassen"
            android:textColor="@color/teal_700" />
      
    </LinearLayout>


</ScrollView>