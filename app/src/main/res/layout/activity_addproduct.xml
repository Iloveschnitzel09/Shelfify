<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:layout_marginTop="16dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Product Informationen"
            android:textColor="@color/teal_700"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/etEan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ean_eingeben"
            android:inputType="number"
            android:textColor="@color/teal_200"
            android:textColorHint="#AAAAAA"
            android:backgroundTint="@color/teal_200"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnCheckEan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EAN prüfen"
            android:backgroundTint="@color/teal_200"
            android:textColor="@color/teal_700"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Produktname (falls unbekannt)"
            android:textColor="@color/teal_200"
            android:textColorHint="#AAAAAA"
            android:backgroundTint="@color/teal_200"
            android:layout_marginBottom="12dp"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/etDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ablaufdatum auswählen"
            android:focusable="false"
            android:clickable="true"
            android:textColor="@color/teal_200"
            android:textColorHint="#AAAAAA"
            android:backgroundTint="@color/teal_200"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnAddProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Produkt hinzufügen"
            android:backgroundTint="@color/teal_200"
            android:textColor="@color/teal_700"/>
    </LinearLayout>
</ScrollView>
